doctype html
html
  head
    title=title
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:500,700|Roboto:400,500,700,900")
    link(rel="stylesheet" href='/style.css')
  body.js-body
    header
      img.logo(src="/images/dirtytalk-fs.jpg" class="header-image")

    div.container
      form.view.js-join
        img(src="/images/dirtytalk-fs.jpg" class="main-image")
        h2="Let's play!"
        input(type='text' name='name' placeholder='Your name' required='required')
        button(type='submit')='Join!'

      div.view.js-joined.hidden
        div.js-clock="--:--"
        p.js-joined-info=""
        h2.js-lastbuzz=''
        button.js-buzzer.buzzer()='Buzz!!!'

    script(src='/socket.io/socket.io.js')
    script(src='/join.js')
