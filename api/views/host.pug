doctype html
html
  head
    title=title
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel="stylesheet" href='/style.css')
  body
    header
      img.logo(src="/images/dirtytalk-fs.jpg" class="header-image")

    div.container
      button.js-subtime(class="smallbutton")='-'
      div.js-clock='--:--'
      button.js-addtime(class="smallbutton")='+'
      h2.js-active=`${users.length} joined`
      div.js-scoreboard=''
      h2.js-lastbuzz=''
      ol.js-users
        each user in users
          li=`${user.name}`
      button.js-clear='Clear buzzes'
      button.js-startclock='Start Clock'
      button.js-pauseclock='Pause Clock'
      button.js-resetclock='Reset Clock'
      button.js-resetscores='Reset Scores'

    script(src='/socket.io/socket.io.js')
    script(src='/host.js')
